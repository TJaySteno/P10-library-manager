if loans
  h2 Loan History
  table
    thead
      tr
        th Book
        th Patron
        th Loaned on
        th Return by
        th Returned on
        th Action
    tbody
      each rawLoan in loans
        - const loan = rawLoan.dataValues;
        tr
          td
            a(href=`/books/details/${loan.book_id}`)= loan.book_title
          td
            a(href=`/patrons/details/${loan.patron_id}`)= loan.patron_name
          td= loan.loaned_on
          td= loan.return_by
          td= loan.returned_on
          td
            if (!loan.returned_on)
              a(href=`/books/return/${loan.id}` class="button") Return Book
