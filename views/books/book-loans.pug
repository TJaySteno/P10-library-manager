extends book-details

block loan-history
  h2 Loan History
  table
    thead
      tr
        th Book
        th Patron
        th Loaned on
        th Return by
        th Returned on
        th Action
    tbody
      each loan in loans
        tr
          td
            a(href=`/books/details/${loan.book.id}`)= loan.book.title
          td
            a(href=`/patrons/details/${loan.patron.id}`)= loan.patron.name
          td= loan.loaned_on
          td= loan.return_by
          td= loan.returned_on
          td
            if (!loan.returned_on)
              a(href=`/books/return/${loan.book.id}` class="button") Return Book
