block content
  p.
    #[strong Book Title:] #[span= book_title]
  p.
    #[strong Loaned by:] #[span= patron_name]
  p.
    #[strong Loaned on:] #[span= loaned_on]
  p.
    #[strong Return by:] #[span= return_by]
  form(action=`/books/return/${id}` method="post")
