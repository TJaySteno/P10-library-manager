extends ../layout

block content
  form(action=`/patrons/details/${patron.id || 'new'}` method="post")
    p
      label(for="first_name") First Name
      input(id="first_name" type="text" name="first_name" placeholder="Muffin" value=`${patron.first_name || ''}`)
    p
      label(for="last_name") Last Name
      input(id="last_name" type="text" name="last_name" placeholder="Mann" value=`${patron.last_name || ''}`)
    p
      label(for="address") Address
      input(id="address" type="text" name="address" placeholder="123 Drury Ln" value=`${patron.address || ''}`)
    p
      label(for="email") Email
      input(id="email" type="text" name="email" placeholder="m.mann@gmail.com" value=`${patron.email || ''}`)
    p
      label(for="library_id") Library ID
      input(id="library_id" type="text" name="library_id" placeholder="MCL8675" value=`${patron.library_id || ''}`)
    p
      label(for="zip_code") Zip Code
      input(id="zip_code" type="text" name="zip_code" placeholder="30900" value=`${patron.zip_code || ''}`)
    p
      input(type="submit" value="Update")
  block patron-loans
