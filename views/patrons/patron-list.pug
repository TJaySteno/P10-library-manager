extends ../layout

block content
  p
    a(href="/patrons/details/new" class="button") Create New Patron
  table
    thead
      tr
        th Name
        th Address
        th Email
        th Library ID
        th Zip
    tbody
      each patron in patrons
        - const name = `${patron.first_name} ${patron.last_name}`;
        tr
          td
            a(href=`/patrons/details/${patron.id}`)= name
          td= patron.address
          td= patron.email
          td= patron.library_id
          td= patron.zip_code
